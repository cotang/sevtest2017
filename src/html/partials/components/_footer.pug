mixin footer()

  // Footer
  +b.FOOTER.footer
    .container
      .row
        .col-xs-12.col-xl-2
          // Logo
          +b.A.logo-footer(href="index.html", itemscope, itemtype="http://schema.org/Brand")
            img(src="img/logo-footer.png", alt="Логотип Севтест", title="Севтест Сертификация", itemprop="logo")

        .col-xs-12.col-xl-6
          +b.footer-menus
            // Footer nav
            +b.NAV.footer-nav
              +e.UL.list
                li.menu-item
                  a(href="index.html") Главная
                li.menu-item
                  a(href="page-about.html") О компании
                li.menu-item
                  a(href="page.html") СМИ о нас
                li.menu-item
                  a(href="page-clients.html") Наши клиенты
                li.menu-item
                  a(href="page-faq.html") Ваши вопросы
                li.menu-item
                  a(href="page-news.html") Новости отрасли
                li.menu-item
                  a(href="page-contacts.html") Контакты

            // Footer cert menu
            +b.NAV.footer-cert-menu
              +e.UL.list
                li.menu-item
                  a(href="page.html") Как подтвердить качество продукции
                li.menu-item
                  a(href="page.html") Сертификация
                li.menu-item
                  a(href="page.html") Декларирование
                li.menu-item
                  a(href="page.html") ИСО
                li.menu-item
                  a(href="page.html") СГР
                li.menu-item
                  a(href="page.html") Технические документы

          +b.footer-contacts(itemscope, itemtype="http://schema.org/ContactPoint")
            +e.column
              +e.SPAN.name(href="#", itemprop="areaServed") Санкт-Петербург
              +e.address ул. Яблочкова, д. 12, лит. Ц., оф. 314
              +e.working-hours с 9:30 до 18:00
            +e.column
              +e.tel-wrapper
                +e.A.tel(href="tel:+78124935927", target="_blank", itemprop="telephone") +7 (812) 493-59-27
                +e.A.tel(href="tel:+78129512642", target="_blank", itemprop="telephone") +7 (812) 951-26-42
              +e.email-wrapper
                +e.A.email(href="mailto:otdel@rostest.net", target="_blank", itemprop="email") spb@sevtest.ru

        .col-xs-12.col-xl-4
          +b.SECTION.footer-form
            +e.H2.title Перезвоните мне
            // MCC form call
            form#mcccform.mcc-form.mcc-form-order-call(method='post', action='')
              input(type='hidden', name='mcc', value='1')
              input(type='hidden', value='call', name='mcc_form')
              input(type='hidden', value='0', name='counter')
              input(type='hidden', value='new', name='mcc_algoritm')
              table
                tbody
                  tr
                    td.mcc-label.mcc-label-name
                      div
                        | Ваше имя:
                        span.mcc-required *
                    td.mcc-value.mcc-value-name
                      input#mcc_name.mcc-text.mcc-form-input(name='mcc_name', type='text', value='', maxlength='255')
                  tr
                    td.mcc-label.mcc-label-phone
                      div
                        | Контактный телефон:
                        span.mcc-required *
                    td.mcc-value.mcc-value-phone
                      input#mcc_phone.mcc-text.mcc-form-input(name='mcc_phone', type='text', value='', maxlength='30')
                  tr
                    td.mcc-label.mcc-label-time
                      div Желаемое время звонка
                    td.mcc-value.mcc-value-time
                      #mcc_time_block
                        #mcc_time_block_1.mcc_time_block
                          input#mcc_time_1.mcc-text.mcc_time_1.hasDatepicker(name='mcc_time_1', type='text', value='с', size='5', maxlength='5')
                        #mcc_time_block_2.mcc_time_block
                          input#mcc_time_2.mcc-text.mcc_time_2.hasDatepicker(name='mcc_time_2', type='text', value='до', size='5', maxlength='5')
                        .mcc_time_clear
                  tr
                    td.mcc-label.mcc-label-captchacode
                      //
                    td.mcc-captcha.mcc-value-captcha
                      div
                        #mcc_captcha_block.mcc_captcha_block
                          #recaptcha1.recaptcha
                            div(style='width: 304px; height: 78px;')
                              div
                                iframe(src='https://www.google.com/recaptcha/api2/anchor?k=6LeAaiYTAAAAADEv2Lz3Mb--6fmLFt97M9JIJ0xX&co=aHR0cDovL3Rlc3RzcGIucnU6ODA.&hl=ru&v=r20170228102020&size=normal&cb=lwn8143gk7gg', title='виджет reCAPTCHA', width='304', height='78', frameborder='0', scrolling='no', name='undefined')
                              textarea#g-recaptcha-response.g-recaptcha-response(name='g-recaptcha-response', style='width: 250px; height: 40px; border: 1px solid #c1c1c1; margin: 10px 25px; padding: 0px; resize: none;  display: none; ')
                          // <script type="text/javascript" src="https://www.google.com/recaptcha/api.js?hl=ru"></script>
                      .mcc_captcha_block_after
                  tr
                    td.mcc-label
                      //
                    td
                      input.mcc-submit(type='submit', name='mcc_submit', value='Заказать звонок')

        .col-xs-12
          +b.copyright © 2007—2016 Сертификационный центр «СевТест». Полный спектр услуг в области сертификации


